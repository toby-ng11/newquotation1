<?php
use Laminas\Mvc\Application;
/**
 * @var Laminas\View\Renderer\PhpRenderer $this
 */
?>

<div class="flex flex-col items-center justify-center h-screen text-center px-4 bg-gray-100">
    <div class="max-w-md bg-white shadow-xl rounded-2xl p-8">
        <div class="text-6xl mb-4 animate-bounce">🔍</div>
        <h1 class="text-3xl font-extrabold text-gray-800 mb-2">404 - Page Not Found</h1>

        <p class="text-gray-600 mb-4">
            <?= $this->escapeHtml($this->message ?: "The page you're looking for can't be found.") ?>
        </p>

        <?php if (!empty($this->reason)) : ?>
            <p class="text-sm text-gray-500 italic mb-4">
                <?php
                switch ($this->reason) {
                    case Application::ERROR_CONTROLLER_CANNOT_DISPATCH:
                        echo 'The requested controller was unable to dispatch the request.';
                        break;
                    case Application::ERROR_MIDDLEWARE_CANNOT_DISPATCH:
                        echo 'The requested middleware was unable to dispatch the request.';
                        break;
                    case Application::ERROR_CONTROLLER_NOT_FOUND:
                        echo 'The requested controller could not be mapped to an existing controller class.';
                        break;
                    case Application::ERROR_CONTROLLER_INVALID:
                        echo 'The requested controller was not dispatchable.';
                        break;
                    case Application::ERROR_ROUTER_NO_MATCH:
                        echo 'The requested URL could not be matched by routing.';
                        break;
                    default:
                        echo 'We cannot determine at this time why a 404 was generated.';
                        break;
                }
                ?>
            </p>
        <?php endif; ?>

        <a href="/"
           class="inline-block rounded-lg bg-gradient-to-r from-blue-600 to-purple-600 px-6 py-2 text-white text-sm font-semibold shadow hover:from-blue-700 hover:to-purple-700 transition">
            🏠 Back to Home
        </a>
    </div>
</div>
