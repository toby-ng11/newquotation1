<script type="text/javascript">

    let sessionUser = "<?php echo $session->user['id']?>";

    $('#project_table').DataTable({
        ajax: {
            url: "/index/project",
            dataSrc: ''
        },
        columns: [
            { data: "project_id", render: function(data, type, row, meta) {
                if(row.owner == sessionUser) { return "<a target='_blank' href='/project/edit/id/"+ row.project_id+"'>"+ row .project_id+"</a>";}
                else { return "<a target='_blank' href='/project/view/id/"+ row.project_id+"'>"+row.project_id+"</a>";}
            } },
            { data: "quote_no"},
            { data: "project_name"},
            { data: "owner"},
