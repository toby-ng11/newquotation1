<script type="text/javascript">

    $('#options-button').on("click", function() {
        $('#options-menu-items').slideToggle({
            start: function() {
                $(this).css('display', 'flex');
            }
        });
    })

    $('#project_table').DataTable({
        ajax: {
            url: "project",
            type: 'POST'
        },
        processing: true,
        serverSide: true, //TODO: Error 404
        columns: [{
                data: "project_id",
                render: function(data) {
                    return "<a target='_blank' href='/project/edit/id/" + data + "'>" + data + "</a>";
                }
            },
            {
                data: "quote_no"
            },
            {
                data: "project_name"
            },
            {
                data: "owner"
            },
            {
                data: "worksheet_assign"
            },
            {
                data: "create_date",
                render: function(data) {
                    let date = new Date(data);
                    return date.toLocaleDateString();
                }
            },
            {
                data: "due_date",
                render: function(data) {
                    let date = new Date(data);
                    let today = new Date();
                    if (date <= today) {
                        return '<span class="red">' + date.toLocaleDateString() + '</span>';
                    } else {
                        return date.toLocaleDateString();
                    }
                }
            },
            {
                data: "Specifier"
            },
            {
                data: "Market_Segment"
            },
            {
                data: "Status"
            },
            {
                data: "project_id",
                render: function(data, type, row, meta) {
                    return '<a target="_blank" href="/quote/index/project/' + data + '">' +
                        '<span class="button-wrap"><span class="icon icon-money"></span></span></a>';
                }
            }
        ],
        columnDefs: [{
            targets: [0, 1, 3, 4, 5, 6, 7, 8],
            className: 'dt-body-center'
        }],
        //"responsive": true,
        order: [
            [0, "desc"]
        ],
        fixedColumns: {
            start: 1,
            end: 1
        },
        scrollX: true,
        layout: {
            topStart: function() {
                let info = document.createElement('div');
                info.innerHTML = '<h2>All projects</h2>';
                return info;
            }
        }
    });

    $('#quote_table').DataTable({
        ajax: {
            url: "quote"
        },
        processing: true,
        serverSide: true, // experimetal: server-side processing
        columns: [{
                data: "quote_id",
                render: function(data, type, row, meta) {
                    return "<a target='_blank' href='/quote/edit/id/" + data + "'>" + data + "</a>";
                }
            },
            {
                data: "project_name"
            },
            {
                data: "Market_Segment"
            },
            {
                data: "quote_date",
                render: function(data) {
                    let date = new Date(data);
                    return date.toLocaleDateString();
                }
            },
            {
                data: "expire_date",
                render: function(data) {
                    let date = new Date(data);
                    let today = new Date();
                    if (date <= today) {
                        return '<span class="red">' + date.toLocaleDateString() + '</span>';
                    } else {
                        return date.toLocaleDateString();
                    }
                }
            },
            {
                data: "ship_required_date",
                render: function(data) {
                    let date = new Date(data);
                    return date.toLocaleDateString();
                }
            },
            {
                data: "Status"
            },
            {
                data: "approve_status",
                render: function(data) {
                    if (data == -1) {
                        return '<span class="disapproved red">Disapproved</span>';
                    } else if (data == 10) {
                        return '<span class="approved green">Approved</span>';
                    } else if (data == 1) {
                        return '<span class="waiting orange">Waiting</span>';
                    } else {
                        return 'Not submitted';
                    }
                }
            }
        ],
        columnDefs: [{
            targets: [0, 2, 3, 4, 5, 6, 7],
            className: 'dt-body-center'
        }],
        order: [
            [0, "desc"]
        ],
        fixedColumns: {
            start: 1,
            end: 1
        },
        scrollX: true,
        layout: {
            topStart: function() {
                let info = document.createElement('div');
                info.innerHTML = '<h2>All quotes</h2>';
                return info;
            }
        }
    });
</script>