            { data: "create_date.date", render: function(data) {
                let date = new Date(data);
                return date.toLocaleDateString();
            }},
            { data: "due_date.date", render: function(data) {
                let date = new Date(data);
                let today = new Date(); 
                if (date <= today) {return '<span class="red">' + date.toLocaleDateString() + '</span>';}
                else { return date.toLocaleDateString();}
            }},
            { data: "Specifier_name"},
            { data: "segment"},
            { data: "status_name"},
            { data: "project_id", render: function(data, type, row, meta) {
                return '<a target="_blank" href="/quote/index/project/' + row.project_id + '">' +
                '<span class="button-wrap"><span class="icon icon-money"></span></span></a>';
            }},
        ],
        columnDefs: [
            { targets: [0, 1, 3, 4, 5, 6, 7, 8, 9], className: 'dt-body-center'}
        ],
        processing: true,
        //"responsive": true,
        order: [[0, "desc"]],
        fixedColumns: { start: 1, end: 2},
        scrollX: true,
        layout: { topStart: function() {
            let info= document.createElement('div');
            info.innerHTML = '<h2>All projects</h2><p><?= count($this->projects) ?> projects';
            return info;
        } }
    });

    $('#quote_table').DataTable({
        ajax: {
            url: "/index/quote",
            dataSrc: ''
        },
        processing: true,
        // serverSide: true, // TODO: enable server-side processing
        columns: [
            {data: "quote_id", render: function(data, type, row, meta) {
                return "<a target='_blank' href='/quote/edit/id/"+ data + "'>" + data + "</a>";
            }},
            {data: "project_name"},
            {data: "segment"},
            {data: "quote_date.date", render: function (data) {
                let date = new Date(data);
                return date.toLocaleDateString();
            }},
            {data: "expire_date.date", render: function(data) {
                let date = new Date(data);
                let today = new Date(); 
                if (date <= today) {return '<span class="red">' + date.toLocaleDateString() + '</span>';}
                else { return date.toLocaleDateString();}
            }},
            {data: "ship_required_date.date", render: function (data) {
                let date = new Date(data);
                return date.toLocaleDateString();
            }},
            {data: "status_name"},
            {data: "approve_status", render: function(data) {
                if (data == -1) {return '<span class="disapproved red">Disapproved</span>';}
                else if (data == 10) {return '<span class="approved green">Approved</span>';}
                else if (data == 1) {return '<span class="waiting orange">Waiting</span>';}
                else {return 'Not submitted';}
            }}
        ],
        columnDefs: [
            { targets: [0, 2, 3, 4, 5, 6, 7], className: 'dt-body-center'}
        ],
        order: [[0, "desc"]],
        fixedColumns: { start: 1, end: 1 },
        scrollX: true,
        layout: { topStart: function() {
            let info= document.createElement('div');
            info.innerHTML = '<h2>All quotes</h2><p><?= count($this->ownproject) ?> quotes';
            return info;
        } }
    });
</script>